ScreenManagment:
    VirtesWindow:
    AnotherScreen:
<VirtesWindow>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Ingresa tu primer apellido:'
            size_hint: (.75,.055)
            pos_hint:{"x":.125,"y":.945}
        TextInput:
            id: primer_apellido
            font_size: 15
            multiline: False
            size_hint: (.75,.055)
            pos_hint:{"x":.125,"y":.855}
            on_text: root.chng_preview(primer_apellido,'primer_apellido')
        Label:
            text: 'Ingresa tu segundo apellido:'
            size_hint: (.75,.055)
            pos_hint:{"x":.125,"y":.765}
        TextInput:
            id: segundo_apellido
            font_size: 15
            multiline: False
            size_hint: (.75,.055)
            pos_hint:{"x":.125,"y":.675}
            on_text: root.chng_preview(segundo_apellido,'segundo_apellido')
        Label:
            text: 'Ingresa tus nombres:'
            size_hint: (.75,.055)
            pos_hint:{"x":.125,"y":.585}
        TextInput:
            id: nombres
            font_size: 15
            size_hint: (.75,.055)
            pos_hint:{"x":.125,"y":.495}
            multiline: False
            on_text: root.chng_preview(nombres,'nombres')
        Label:
            text: 'Ingresa tu número de DNI:'
            size_hint: (.75,.055)
            pos_hint:{"x":.125,"y":.405}
        TextInput:
            id: dni
            font_size: 15
            size_hint: (.75,.055)
            pos_hint:{"x":.125,"y":.315}
            multiline: False
            on_text: root.chng_preview(dni,'dni')
        Label:
            text: 'Ingresa el número de verificación de tu DNI:'
            size_hint: (.75,.055)
            pos_hint:{"x":.125,"y":.225}
        TextInput:
            id: cod_ver_dni
            font_size: 15
            size_hint: (.75,.055)
            pos_hint:{"x":.125,"y":.135}
            multiline: False
            on_text: root.chng_preview(cod_ver_dni,'cod_ver_dni')
        Button:
            id: logichperemen
            text: 'ENVIAR DATOS'
            bold: True
            font_size: 15
            size_hint: (.75,.055)
            pos_hint:{"x":.125,"y":.45}
            background_color: 'BE2623'
            background_normal: ''
            # on_release: app.root.current = "other"
            #on_release: root.consultar(), current
            #,  = "other" if [primer_apellido.text, segundo_apellido.text, nombres.text, dni.text, cod_ver_dni.text] == root.fila1
    FloatLayout:
        canvas.before:
            Color:
                rgb: [0.23,0.23,0.23]
            RoundedRectangle:
                size: 360,30
                pos: 60,230
                radius: [8,]
            Color:
                rgb: [0.17,0.565,1]
            RoundedRectangle:
                size: 360,190
                pos: 60,50
                radius: [8,]
            Color:
                rgb: [0.23,0.23,0.23]
            Rectangle:
                size: 360,10
                pos: 60,230
            Color:
                rgb: [1,1,1]
            Rectangle:
                size: 80,105
                pos: 75,100
        Label:
            size_hint: (1,1)
        Label:
            id: frst_apellido
            bold: True
            color: 0,0,0
            font_size: 10
            pos_hint:{"x":-0.125,"y":0.085}
        Label:
            id: scnd_apellido
            bold: True
            color: 0,0,0
            font_size: 10
            pos_hint:{"x":-0.125,"y":0}
        Label:
            id: names
            bold: True
            color: 0,0,0
            font_size: 10
            pos_hint:{"x":-0.080,"y":-0.085}
        Label:
            id: ind
            pos_hint:{"x":.25,"y":.225}
            bold: True
            color: 1,0,0
            font_size: 12
        Label:
            id: dni_ver_cod
            pos_hint:{"x":.33,"y":.225}
            bold: True
            color: 1,0,0
            font_size: 12


<AnotherScreen>:
    name: "other"

    Button:
        text: '1.  ACCIÓN POPULAR'
        on_release: votar(1)
    Button:
        text: '2.  ALINZA PARA EL PROGRESO'
        on_release: votar(2)
    Button:
        text: '3.  AVANZA PAÍS'
        on_release: votar(3)